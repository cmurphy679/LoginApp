<Window x:Class="Login.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main" Height="350" Width="600" ResizeMode="CanMinimize" Icon="Images/icon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="DarkBlue" Offset="-0.5"/>
                <GradientStop Color="SteelBlue" Offset="0.25"/>
                <GradientStop Color="WhiteSmoke" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="2" Grid.ColumnSpan="2" Grid.Column="0" HorizontalAlignment="Left" Height="292" Margin="337,10,0,0" VerticalAlignment="Top" Width="241"/>
        <Image Grid.Column="0" x:Name="imgLogin" Height="310" VerticalAlignment="Top" Stretch="Fill" Source="Images/Raccoon_Login.png" Margin="0,0,95,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="96,66,0,0" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console" FontSize="14" VerticalContentAlignment="Center" Grid.Column="1" ToolTip=""/>
        <TextBox x:Name="txtForename" HorizontalAlignment="Left" Height="23" Margin="96,144,0,0" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console" FontSize="14" VerticalContentAlignment="Center" Grid.Column="1" ToolTip="Enter forename.."/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Height="23" Margin="96,183,0,0" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console" FontSize="14" VerticalContentAlignment="Center" Grid.Column="1" ToolTip="Enter surname.."/>
        <TextBox x:Name="txtAge" HorizontalAlignment="Left" Height="23" Margin="96,221,0,0" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console" FontSize="14" VerticalContentAlignment="Center" Grid.Column="1" ToolTip="Enter age.."/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="96,105,0,0" VerticalAlignment="Top" Width="120" FontFamily="Lucida Console" FontSize="14" VerticalContentAlignment="Center" Grid.Column="1" ToolTip="Enter password.."/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="344,105,0,0" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="16" Grid.ColumnSpan="2" Grid.Column="0" />
        <Label x:Name="lblID" Content="Username:" HorizontalAlignment="Left" Margin="344,66,0,0" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="16" Grid.ColumnSpan="2"
               Grid.Column="0" />
        <Label x:Name="lblForename" Content="Forename:" HorizontalAlignment="Left" Margin="343,144,0,0" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="16" Grid.ColumnSpan="2"
               Grid.Column="0" />
        <Label x:Name="lblSurname" Content="Surname:" HorizontalAlignment="Left" Margin="7,183,0,0" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="16" Grid.Column="1" ToolTip=""/>
        <Label x:Name="lblAge" Content="Age:" HorizontalAlignment="Left" Margin="46,221,0,0" VerticalAlignment="Top" FontFamily="Lucida Console" FontSize="16" Grid.Column="1" ToolTip=""/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="63,268,0,0" VerticalAlignment="Top" Width="108" FontFamily="Lucida Console" FontSize="16" Grid.Column="1" ToolTip="Create account.." Click="btnRegister_Click" MouseEnter="btnRegister_MouseEnter" MouseLeave="btnRegister_MouseLeave"/>
        <Label x:Name="lblWelcome" Content="Create New User" HorizontalAlignment="Left" Margin="5,21,0,0" VerticalAlignment="Top" FontFamily="Copperplate Gothic Bold" FontSize="16" Background="#FFC3D4E2" Grid.Column="1" Width="212" HorizontalContentAlignment="Center"/>
        <Button Grid.Column="0" x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="181,21,0,0" VerticalAlignment="Top" Width="74" FontFamily="Lucida Console" FontSize="16" Height="28" ToolTip="Return to login screen.." Click="btnBack_Click" MouseEnter="btnBack_MouseEnter" MouseLeave="btnBack_MouseLeave"/>
    </Grid>
</Window>
